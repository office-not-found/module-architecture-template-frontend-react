{
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/jsx-runtime",
        "plugin:prettier/recommended",
        "@feature-sliced" // TODO: Feature Sliced Architecture
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true
            }
        }
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "root": true,
    "ignorePatterns": ["vite.config.ts", "public/**", "build/**", "dist/**"],
    "rules": {
        "prettier/prettier": "error",
        "react-hooks/exhaustive-deps": "off",
        "@typescript-eslint/consistent-type-imports": [
            2,
            { "fixStyle": "separate-type-imports" }
        ],
        "keyword-spacing": ["error", { "after": true }], // TODO: Prettier has this rule
        "eol-last": "error", // TODO: Prettier has this rule
        "prefer-promise-reject-errors": "error",
        "curly": "off",
        "comma-dangle": ["error", "never"], // TODO: Prettier has this rule
        "comma-spacing": "error", // TODO: Prettier has this rule
        "comma-style": "error", // TODO: Prettier has this rule
        "quote-props": ["error", "consistent"], // TODO: Prettier has this rule
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "space-before-blocks": ["error", "always"], // TODO: Prettier has this rule
        "spaced-comment": ["error", "always"],
        "prefer-const": ["error", { "destructuring": "all" }],
        "object-curly-spacing": ["error", "always"], // TODO: Prettier has this rule
        "array-bracket-spacing": ["error", "never"], // TODO: Prettier has this rule
        "switch-colon-spacing": "error", // TODO: Prettier has this rule
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "no-useless-call": "error",
        "semi": ["error", "always"],
        "no-trailing-spaces": "error", // TODO: Prettier has this rule
        "no-mixed-spaces-and-tabs": "error", // TODO: Prettier has this rule
        "no-multiple-empty-lines": ["error", { "max": 2 }], // TODO: Prettier has this rule
        "no-return-await": "error",
        "no-console": ["error", { "allow": ["warn", "error"] }]
    },
    "overrides": [
        { "files": ["*.{c,m,}{t,j}s", "*.{t,j}sx"] },
        { "files": ["*{test,spec}.{t,j}s?(x)"] }
    ]
}
